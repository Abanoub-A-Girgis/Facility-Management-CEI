@model API.Models.AppUser

@{
    ViewData["Title"] = "Edit Employee Data";
}

<h1>Edit Employee Data</h1>

@*<h4>AppUser</h4>*@
<hr />
<div class="container p-3 my-3 border">
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Type" class="control-label"></label><!-- creating our drop down list for statuts enum-->
            <select @Html.DropDownList("Type", new List<SelectListItem> {
                new SelectListItem { Text="Choose Type", Disabled = true },
                new SelectListItem { Text="SystemAdmin",Value="0"},
                new SelectListItem { Text="Owner",Value="1"} ,
                new SelectListItem { Text="Manager",Value="2"} ,
                new SelectListItem { Text="Supervisor",Value="3"} ,
                new SelectListItem { Text="Inspector",Value="4"} ,
                new SelectListItem { Text="Agent",Value="5"} ,
                }, new { @class = "form-control" })  ></select><!--the default value for our drop panel-->
                <span asp-validation-for="Type" class="text-danger"></span> <!-- data vaidation for the inserted value-->
            </div>
            <div class="form-group">
                <label asp-for="BuildingId" class="control-label"></label>
                <select asp-for="BuildingId" class="form-control" asp-items="ViewBag.BuildingId"></select>
                <span asp-validation-for="BuildingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuperId" class="control-label"></label>
                <select asp-for="SuperId" class="form-control" asp-items="ViewBag.SuperId"></select>
                <span asp-validation-for="SuperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LogUserId" class="form-control" hidden />
                <span asp-validation-for="LogUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



