@using Facility_Management_CEI.Controllers
@model API.Models.AppUser
@using API.Enums

@{
    ViewData["Title"] = "Employee Details";
}

<h1>
    <english>Employee Details</english>
    <arabic class="d-none">تفاصيل بيانات العاملين</arabic>
</h1>

<div>
   @* <h4>AppUser</h4>*@
    <hr />
    <div class="float-right">
        <img src="~/assets/images/carousel/image1.jpg" class="rounded mx-auto d-block" alt="Details">
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            <english>ID</english>
            <arabic class="d-none">الكود</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <english>@Html.DisplayNameFor(model => model.FirstName)</english>
            <arabic class="d-none">الأسم الأول</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            <english> @Html.DisplayNameFor(model => model.LastName)</english>
            <arabic class="d-none">الأسم الأخير</arabic>
           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            <english> @Html.DisplayNameFor(model => model.Type)</english>
            <arabic class="d-none">نوع المستخدم </arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
            @if(Model.Type==UserType.AccountManager)
            {
                <img src="~/Photos/AccountManager.png" width ="20" hight="20" alt="Details">
            }
            @if(Model.Type==UserType.Owner)
            {
                <img src="~/Photos/Owner.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.Type== UserType.Manager)
            {
                <img src="~/Photos/Manager.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.Type== UserType.Supervisor)
            {
                <img src="~/Photos/Supervisor.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.Type== UserType.Inspector)
            {
                <img src="~/Photos/Inspector.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.Type== UserType.Agent)
            {
                <img src="~/Photos/Agent.png" width ="25" hight="25" alt="Details">
            }

        </dd>
        <dt class = "col-sm-2">
            <english>  @Html.DisplayNameFor(model => model.BuildingId)</english>
            <arabic class="d-none">كود المبنى</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuildingId)
        </dd>
        <dt class = "col-sm-2">
            <english> @*@Html.DisplayNameFor(model => model.SuperId)*@Supervisor ID</english>
            <arabic class="d-none">كود المشرف</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SuperId)

        </dd>
         <dt class = "col-sm-2">
            <english>Supervisor Name</english>
            <arabic class="d-none">اسم المشرف</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Super.FirstName)

        </dd>

    </dl>
</div>

<div>
    @if (ViewContext.HttpContext.User.IsInAnyRoles("AccountManager"))
    {
        
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">
            <english>Edit</english>
            <arabic class="d-none"> تعديل</arabic>
        </a> 
    }
        
    <a asp-action="Index"  class="btn btn-danger">
              <english>Back to List</english>
            <arabic class="d-none"> العودة الى القائمة</arabic>
    </a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}