@model IEnumerable<API.Models.SensorWarning>
    @{
    ViewData["Title"]="SensorWarning";
    Layout = "~/Views/_Shared/_Layout.cshtml";
    }

@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
                <div class="card text-center">
                  <div class="card-header">
                    <h3>Sensors Warnings</h3>
                  </div>
                  <div class="card-body">
                    <p class="card-text">Invistegate Sensors Warnings and Assing It to Incident.</p>
                  </div>
                </div>
                <div class="mt-4">
                    <div class="table-responsive">
                        <table id="datatable" class="table" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead class="thead-dark">
                                <tr>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Priority)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.IssueDate)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.SensorId)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Investigated)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.InvestigatDate)</th>
                                    <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.AppUserId)</th>
                                    <th class="text-center" scope="col">Ignore Action</th>
                                    <th class="text-center" scope="col">Assign Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr >
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.Priority)</td>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.IssueDate)</td>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.SensorId)</td>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td class="text-center"></td><!-- investihated Cell-->
                                    <td class="text-center"></td><!-- Investigation Date Cell-->
                                    <td class="text-center"></td><!--AppUser Id Cell-->
                                    <td class="text-center">
                                    <a  asp-action="Ignore" class="btn btn-outline-danger"  asp-route-WarningId="@item.Id" >Ignore </a> 
                                    </td>
                                    <td class="text-center">
                                    <a  asp-action="Investigate" class="btn btn-outline-primary"  asp-route-WarningId="@item.Id">Investigate</a> 
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
}