            <div class="custom-control custom-switch mb-5">
                <input type="checkbox" class="custom-control-input theme-choice" id="LanguageSwitch" onchange="ChangeLanguage()"/>
                <label class="custom-control-label" for="LanguageSwitch">
                    <english>English</english>
                    <arabic class="d-none">عربي</arabic>
                </label>
                <script>
                    var Language = "english";
                        function ChangeLanguage() {
                            var english = $('english');
                            var arabic = ('arabic');
                            if (Language == "english") {
                                Language = "arabic";
                                $(english).each(function() {
                                    $(this).addClass("d-none")
                                    console.log(this)
                                });
                                $(arabic).each(function() {
                                    $(this).removeClass("d-none")
                                });
                                $("#bootstrap-style").attr('href', '/assets/css/bootstrap.min.css');
                                $("#app-style").attr('href', '/assets/css/app-rtl.min.css');
                                sessionStorage.setItem("is_visited", "rtl-mode-switch");
                            }
                            else {
                                Language = "english";
                                $(arabic).each(function() {
                                    $(this).addClass("d-none")
                                });
                                $(english).each(function() {
                                    $(this).removeClass("d-none")
                                });
                                $("#bootstrap-style").attr('href', '/assets/css/bootstrap.min.css');
                                $("#app-style").attr('href', '/assets/css/app.min.css');
                                sessionStorage.setItem("is_visited", "light-mode-switch");
                            }
                        }
