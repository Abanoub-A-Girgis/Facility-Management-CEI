            <english>Space ID</english>
            <arabic class="d-none">كود الفراغ</arabic>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SpaceId)
        </dd>
                <dt class="col-sm-3">
            <english>User ID</english>
            <arabic class="d-none">كود المستخدم</arabic>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AppUserId)

            @if(Model.AppUser.Type==UserType.AccountManager)
            {
                <img src="~/Photos/AccountManager.png" width ="20" hight="20" alt="Details">
            }
            @if(Model.AppUser.Type==UserType.Owner)
            {
                <img src="~/Photos/Owner.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.AppUser.Type== UserType.Manager)
            {
                <img src="~/Photos/Manager.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.AppUser.Type== UserType.Supervisor)
            {
                <img src="~/Photos/Supervisor.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.AppUser.Type== UserType.Inspector)
            {
                <img src="~/Photos/Inspector.png" width ="30" hight="30" alt="Details">
            }
            @if(Model.AppUser.Type== UserType.Agent)
            {
                <img src="~/Photos/Agent.png" width ="25" hight="25" alt="Details">
            }

        </dd>
        <dt class="col-sm-3">
            <english>Asset ID</english>
            <arabic class="d-none">كود الأصل</arabic>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AssetId)
        </dd>
        <dt class="col-sm-3">
            <english>@Html.DisplayNameFor(model => model.Comment)</english>
            <arabic class="d-none">ملاحظات</arabic>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Comment)
        </dd>


    </dl>
    </div>
    <div class="m-auto col-sm-4 mw-100">
        <img src="~/assets/images/Delete-Work-Order.png" class="rounded mx-auto d-block" alt="Details">
    </div>
    </div>
    <english>
        <form asp-action="Delete">
        <input type="hidden" name=IncidentId asp-for=Id />
        <input class="btn btn-danger waves-effect" type="submit" value="Delete" /> |
        <a class="btn btn-success waves-effect" asp-action="Index">Back to List</a>
    </form>
    </english>
    <arabic class="d-none">
        <form asp-action="Delete">
