@model API.Models.Incident
@using API.Enums
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h2><english>Deleting Incident</english><arabic class="d-none">حذف الحادثة</arabic></h2>
