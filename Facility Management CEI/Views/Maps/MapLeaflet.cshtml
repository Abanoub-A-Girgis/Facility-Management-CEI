@{
    ViewBag.Title = "Leaflet";
    ViewBag.pTitle = "Leaflet";
    ViewBag.pageTitle = "Maps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- leaflet Css -->
<link href="~/libs/leaflet/leaflet.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Example</h4>
                <div id="leaflet-map" class="leaflet-map"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Markers, circles and polygons</h4>
                <div id="leaflet-map-marker" class="leaflet-map"></div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Working with popups</h4>
                <div id="leaflet-map-popup" class="leaflet-map"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Markers with Custom Icons</h4>
                <div id="leaflet-map-custom-icons" class="leaflet-map"></div>
            </div>
        </div>
    </div>

</div>
<!-- end row -->

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Interactive Choropleth Map</h4>

                <div id="leaflet-map-interactive-map" class="leaflet-map"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Layer Groups and Layers Control</h4>
                <div id="leaflet-map-group-control" class="leaflet-map"></div>
            </div>
        </div>
    </div>

</div>
<!-- end row -->
<!-- JAVASCRIPT -->
<script src="~/libs/jquery/jquery.min.js"></script>
<script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/libs/metismenu/metisMenu.min.js"></script>
<script src="~/libs/simplebar/simplebar.min.js"></script>
<script src="~/libs/node-waves/waves.min.js"></script>
<script src="~/js/lang/jquery.multiLanguage.js"></script>
<!-- leaflet plugin -->
<script src="~/libs/leaflet/leaflet.js"></script>

<!-- leaflet map.init -->
<script src="~/js/Views/leaflet-us-states.js"></script>
<script src="~/js/Views/leaflet-map.init.js"></script>

<script src="~/js/app.js"></script>


