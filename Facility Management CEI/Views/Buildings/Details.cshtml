@model API.Models.Building

@{
    ViewData["Title"] = "Building Details";
}

<h1>
    <english>Building Details</english>
    <arabic class="d-none"> تفاصيل المنشأ</arabic>
</h1>
<hr />

<div class="row">
@*    <h4>Building Details</h4>*@
    <div class="col-md-4">
        <dl class="row">
            <dt class = "col-sm-2">
                <english> ID</english>
                <arabic class="d-none">الكود</arabic>
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class = "col-sm-2">
                <english> @Html.DisplayNameFor(model => model.Name)</english>
