@model API.Models.Asset

@{
    ViewData["Title"] = "Assets Details";
}

<h1>
        <english> Assets Details</english>
    <arabic class="d-none">تفاصيل الأصول والموجودات بالمنشأة </arabic></h1>
    <hr />

<div class="row">
@*    <h4>Asset</h4>*@
    
    <div class="col-md-4">
    <dl class="row">
        <dt class = "col-sm-3">
         <english>@Html.DisplayNameFor(model => model.Id)</english>
         <arabic class="d-none">الكود</arabic>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-3">
             <english>@Html.DisplayNameFor(model => model.Name)</english>
             <arabic class="d-none">الاسم</arabic>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

         <dt class="col-sm-3">
             <english>@Html.DisplayNameFor(model => model.Materials)</english>
             <arabic class="d-none">المواد المكونه للعنصر</arabic>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materials)
        </dd>

        <dt class="col-sm-3">
                <english> Space @Html.DisplayNameFor(model => model.Space.Id)</english>
                <arabic class="d-none"> كود الغرفه </arabic>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Space.Id)
        </dd>

         <dt class = "col-sm-3">
                <english> Space @Html.DisplayNameFor(model => model.Space.Name)</english>
                <arabic class="d-none">اسم الغرفه</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Space.Name)
        </dd>

        <dt class = "col-sm-3">
                <english> Floor @Html.DisplayNameFor(model => model.Floor.Id)</english>
                <arabic class="d-none">كود الطابق</arabic>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor.Id)
        </dd>

        <dt class = "col-sm-3">
                <english>@Html.DisplayNameFor(model => model.Floor.FloorName)</english>
                <arabic class="d-none">اسم الطابق</arabic>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Floor.FloorName)
        </dd>
    </dl>
    </div>
    <div class="m-auto col-sm-4 mw-100">
        <img src="~/assets/images/furniture.jpg" class="rounded mx-auto d-block" alt="Details">
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success waves-effect">
                <english>Back to List</english>
                <arabic class="d-none">العودة الى القائمة</arabic></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}